general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "wireless wlp5s0"
order += "ethernet enp4s0"
order += "volume master"
order += "battery 0"
order += "tztime local"

volume master {
    format = "ï€¨ %volume"
    format_muted = "ï€¦ %volume"
    device = "default"
    mixer = "PCM"
    mixer_idx = 0
    separator_block_width = 30
}

wireless wlp5s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
        separator_block_width = 30
}

ethernet enp4s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
}

battery 0 {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
        separator_block_width = 30
}

tztime local {
        format = "%a %Y-%m-%d %H:%M"
        separator_block_width = 30
}
